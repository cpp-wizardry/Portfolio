<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/Style/Header.css">
    <title>Header</title>
</head>
<body>

<header class="header-container">
    <div class="logo">
        <img src="/logo_no_BG.png" alt="Logo" height="40">
    </div>

<div class="Header-btn">
    <button onclick="location.href='/'">Index</button>
    <button onclick="location.href='/Projects'">Projets</button>
    <button onclick="location.href='/Parcours'">Parcours</button>
    <button onclick="location.href='/Contacts'">Contact</button>
    <button onclick="switchLang()">🌐 {{ lang }}</button>
</div>


    <div class="search-bar">
        <input type="text" placeholder="Rechercher..." />
        <button>🔍</button>
    </div>
</header>
<script>
function switchLang() {
    const currentLang = new URLSearchParams(window.location.search).get('lang') || 'FR';
    const newLang = currentLang === 'FR' ? 'EN' : 'FR';
    
    const url = new URL(window.location.href);
    url.searchParams.set('lang', newLang);

    window.location.href = url.toString();
}
</script>


</body>
</html>
