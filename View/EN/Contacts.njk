{% extends "./Layout.njk" %}

{% block title %}Contact{% endblock %}

{% block content %}
  <h1>Contact Me</h1>
  <p>You can reach me through this form or directly by email at <a href="mailto:mohamed.aissaoui09112@gmail.com">mohamed.aissaoui09112@gmail.com</a>.</p>

  <form action="/send-message" method="POST" class="contact-form">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required placeholder="Your full name">

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required placeholder="your.email@example.com">

    <label for="message">Message:</label>
    <textarea id="message" name="message" rows="6" required placeholder="Your message here..."></textarea>

    <button type="submit">Send</button>
  </form>
{% endblock %}
