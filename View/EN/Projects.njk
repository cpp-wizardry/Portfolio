{% extends "./Layout.njk" %}

{% block title %}My Projects{% endblock %}

{% block content %}
  <h1>My Projects</h1>

  {% for project in projects %}
    <div class="project-card">
      <img src="{{ project.image }}" alt="{{ project.name }}">
      <div class="project-content">
        <h2><a href="/Projects/{{ project.id }}">{{ project.name }}</a></h2>
        <p><strong>Date:</strong> {{ project.date | yearMonth }}</p>
        <div class="project-tags">
          {% for pt in project.tags %}
            <span class="project-tag">{{ pt.tag.name }}</span>
          {% endfor %}
        </div>
        <p class="project-description">{{ project.description | truncate(200) }}</p>
      </div>
    </div>
  {% endfor %}
{% endblock %}
